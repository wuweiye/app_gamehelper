<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="cn.dkm.gamehelper.gameInfo.activity.AssessActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/mi_ku_green"
        android:layout_height="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_quit"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/quit"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="2222222"
            android:gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_submit"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="发表"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <cn.dkm.gamehelper.view.RatingBar
        android:id="@+id/rb"
        android:layout_width="360dp"
        android:layout_height="50dp"
        app:starCount="5"
        app:starEmpty="@drawable/star_empty"
        app:starFill="@drawable/star"
        app:starHalf="@drawable/star"
        app:starImageSize="40dp"
        app:starPadding="20dp"
        app:starStep="1"
        app:stepSize="Half"  />
    <EditText
        android:id="@+id/et_content"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/assess"
        android:textSize="15sp"
        android:background="@null"
        />


</LinearLayout>
